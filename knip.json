{
  "ignore": [],
  "ignoreBinaries": ["flyctl", "eslint"],
  "ignoreUnresolved": ["spec"],
  "ignoreDependencies": [],
  "ignoreWorkspaces": [],
  "workspaces": {
    ".": {
      "entry": ["eslint.config.js"]
    },
    "packages/web": {
      "entry": [
        "app.js",
        "client/**/*.js",
        "plugins/**/*.js",
        "routes/**/{routes,autohooks}.js",
        "scripts/**/*.js",
        "test/**/*.js",
        "otel.js"
      ],
      "ignoreDependencies": ["highlight.js"],
      "ignoreBinaries": ["pg-to-dbml"],
      "project": ["**/*.js"]
    },
    "packages/worker": {
      "entry": [
        "app.js",
        "plugins/**/*.js",
        "routes/**/index.js",
        "scripts/**/*.js",
        "test/**/*.js",
        "otel.js"
      ],
      "project": ["**/*.js"]
    },
    "packages/*": {
      "entry": ["**/*.js", "eslint.config.js"],
      "project": ["**/*.js"]
    }
  }
}
