{
  "name": "@breadcrum/web",
  "description": "The primary web server process in breadcrum.net. Provides API and html web serving.",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "dependencies": {
    "@breadcrum/resources": "file:../resources",
    "@bull-board/api": "^6.0.0",
    "@bull-board/fastify": "^6.0.0",
    "@fastify/accepts": "^5.0.1",
    "@fastify/auth": "^5.0.1",
    "@fastify/autoload": "^6.0.1",
    "@fastify/basic-auth": "^6.0.1",
    "@fastify/circuit-breaker": "^4.0.1",
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/helmet": "^13.0.0",
    "@fastify/jwt": "^9.0.1",
    "@fastify/postgres": "^6.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/redis": "^7.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@nearform/sql": "^1.5.0",
    "abstract-cache-redis": "^2.0.0",
    "ajv": "^8.17.1",
    "bullmq": "^5.34.6",
    "clean-deep": "^3.4.0",
    "common-tags": "^1.8.2",
    "dotenv": "^16.0.1",
    "fast-json-body": "^1.1.0",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.1",
    "fastify-healthcheck": "^5.0.0",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "fastify-user-agent": "^2.0.0",
    "hyperid": "^3.1.1",
    "jsonfeed-to-atom": "^1.2.5",
    "jsonfeed-to-rss": "^3.0.8",
    "nodemailer": "^6.8.0",
    "pg": "^8.6.0",
    "pony-cause": "^2.1.11",
    "postgrator-cli": "^9.0.0",
    "resolve-email": "3.0.12",
    "undici": "^7.0.0"
  },
  "optionalDependencies": {
    "sodium-native": "^4.0.0"
  },
  "devDependencies": {
    "@breadcrum/bookmarklet": "1.0.12",
    "@bret/type-provider-json-schema-to-ts": "^5.0.1",
    "@types/common-tags": "^1.8.4",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.10",
    "@voxpelli/tsconfig": "^15.0.0",
    "classnames": "^2.3.1",
    "fetch-undici": "^5.0.0",
    "format-duration": "^3.0.0",
    "fragmentions": "^1.1.4",
    "giscus": "^1.6.0",
    "highlight.js": "^11.5.0",
    "json-schema-to-ts": "^3.1.0",
    "local-storage-proxy": "^4.0.3",
    "mine.css": "^10.0.0",
    "neostandard": "^0.12.0",
    "npm-run-all2": "^7.0.1",
    "p-map": "^7.0.0",
    "tap": "^21.0.0",
    "top-bun": "^10.0.0",
    "type-fest": "^4.26.1",
    "typescript": "~5.7.2",
    "uland-isomorphic": "^2.0.0",
    "xmlbuilder": "^15.1.1"
  },
  "engines": {
    "node": ">=21.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:top-bun": "tb --src client --dest public",
    "clean": "rm -rf public && mkdir -p public",
    "migrate": "postgrator",
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:eslint": "eslint . --ignore-pattern 'public/*'",
    "test:tap": "tap",
    "test-skip:tsc": "tsc",
    "watch": "run-s clean && run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git ./client ./public' -l info -P -p 3000 --options --address 0.0.0.0 app.js",
    "watch:tob-bun": "npm run build:top-bun -- --watch-only --drafts",
    "top-bun-watch": "npm run build:top-bun -- --watch --drafts",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js",
    "generate-dbml": "npx pg-to-dbml --c postgres://postgres@localhost/breadcrum"
  },
  "tap": {
    "serial": [
      "test",
      "routes"
    ],
    "allow-incomplete-coverage": true,
    "coverage-report": [
      "text",
      "lcovonly"
    ],
    "plugin": [
      "!@tapjs/typescript"
    ]
  }
}
