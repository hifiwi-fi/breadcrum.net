    "@fastify/postgres": "catalog:",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/redis": "catalog:",
    "@fastify/sensible": "catalog:",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@maxmind/geoip2-node": "^6.3.4",
    "@nearform/sql": "catalog:",
    "@opentelemetry/api": "catalog:",
    "@opentelemetry/exporter-prometheus": "catalog:",
    "@opentelemetry/host-metrics": "catalog:",
    "@opentelemetry/instrumentation-http": "catalog:",
    "@opentelemetry/instrumentation-runtime-node": "catalog:",
    "@opentelemetry/sdk-node": "catalog:",
    "@passwordless-id/webauthn": "^2.3.5",
    "@preact/signals": "^2.3.2",
    "@tanstack/preact-query": "^5.91.0",
    "abstract-cache-redis": "catalog:",
    "clean-deep": "^3.4.0",
    "common-tags": "^1.8.2",
    "fast-json-body": "^1.1.0",
    "fastify": "catalog:",
    "fastify-cli": "catalog:",
    "fastify-healthcheck": "catalog:",
    "fastify-plugin": "catalog:",
    "fastify-user-agent": "^2.0.0",
    "htm": "^3.1.1",
    "jsonfeed-to-atom": "^1.2.5",
    "jsonfeed-to-rss": "^3.0.8",
    "nodemailer": "^8.0.0",
    "pg": "catalog:",
    "postgrator-cli": "^9.0.0",
    "preact": "^10.27.0",
    "preact-render-to-string": "^6.6.3",
    "resolve-email": "^4.0.34",
    "undici": "catalog:",
    "useragent": "^2.3.0"
  },
  "devDependencies": {
    "@breadcrum/bookmarklet": "1.0.13",
    "@domstack/static": "^11.0.2",
    "@fastify/type-provider-json-schema-to-ts": "catalog:",
    "@types/common-tags": "^1.8.4",
    "@types/node": "catalog:",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "catalog:",
    "@types/useragent": "^2.3.4",
    "@voxpelli/tsconfig": "catalog:",
    "argsclopts": "^1.0.5",
    "c8": "catalog:",
    "classnames": "^2.3.1",
    "eslint": "catalog:",
    "format-duration": "^3.0.0",
    "fragmentions": "^1.1.4",
    "giscus": "^1.6.0",
    "highlight.js": "^11.5.0",
    "json-schema-to-ts": "^3.1.1",
    "local-storage-proxy": "^4.0.3",
    "mine.css": "^10.0.0",
    "neostandard": "catalog:",
    "npm-run-all2": "catalog:",
    "p-map": "^7.0.0",
    "type-fest": "^5.2.0",
    "typescript": "catalog:",
    "xmlbuilder": "^15.1.1"
  },
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:domstack": "dom --src client --dest public",
    "clean": "rm -rf public && mkdir -p public",
    "migrate": "postgrator",
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0 --import otel.js",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:eslint": "eslint . --ignore-pattern 'public/*'",
    "test:node": "c8 node --test --test-reporter spec --test-force-exit --test-concurrency 1",
    "test:tsc": "tsc",
    "watch": "run-s clean && run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git ./client ./public' -l info -P -p 3000 --options --address 0.0.0.0 app.js",
    "watch:domstack": "pnpm run build:domstack --watch-only --drafts",
    "domstack-watch": "pnpm run build:domstack --watch --drafts",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js --import otel.js",
    "generate-dbml": "pnpm dlx pg-to-dbml --c postgres://postgres@localhost/breadcrum"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
