{
  "name": "@breadcrum/web",
  "description": "The primary web server process in breadcrum.net. Provides API and html web serving.",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "dependencies": {
    "@breadcrum/resources": "file:../resources",
    "@fastify/accepts": "^5.0.1",
    "@fastify/auth": "^5.0.1",
    "@fastify/autoload": "^6.0.1",
    "@fastify/basic-auth": "^6.0.1",
    "@fastify/circuit-breaker": "^4.0.1",
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^11.0.0",
    "@fastify/env": "^5.0.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/helmet": "^13.0.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/otel": "^0.13.0",
    "@fastify/postgres": "^6.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/redis": "^7.1.0",
    "@fastify/sensible": "^6.0.1",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@nearform/sql": "^1.5.0",
    "@opentelemetry/host-metrics": "^0.37.0",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/instrumentation-runtime-node": "^0.22.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@preact/signals": "^2.3.2",
    "abstract-cache-redis": "^2.0.0",
    "ajv": "^8.17.1",
    "clean-deep": "^3.4.0",
    "common-tags": "^1.8.2",
    "dotenv": "^17.0.0",
    "fast-json-body": "^1.1.0",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.1",
    "fastify-healthcheck": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "fastify-user-agent": "^2.0.0",
    "htm": "^3.1.1",
    "hyperid": "^3.1.1",
    "jsonfeed-to-atom": "^1.2.5",
    "jsonfeed-to-rss": "^3.0.8",
    "nodemailer": "^7.0.9",
    "pg": "^8.6.0",
    "pony-cause": "^2.1.11",
    "postgrator-cli": "^9.0.0",
    "preact": "^10.27.0",
    "preact-render-to-string": "^6.6.3",
    "resolve-email": "^4.0.27",
    "undici": "^7.0.0",
    "useragent": "^2.3.0"
  },
  "optionalDependencies": {
    "sodium-native": "^5.0.1"
  },
  "devDependencies": {
    "@breadcrum/bookmarklet": "1.0.13",
    "@domstack/static": "^11.0.0-beta.6",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@types/common-tags": "^1.8.4",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.2",
    "@types/useragent": "^2.3.4",
    "@types/pg": "^8.11.10",
    "@voxpelli/tsconfig": "^16.0.0",
    "c8": "^10.0.0",
    "classnames": "^2.3.1",
    "format-duration": "^3.0.0",
    "fragmentions": "^1.1.4",
    "giscus": "^1.6.0",
    "highlight.js": "^11.5.0",
    "json-schema-to-ts": "^3.1.0",
    "local-storage-proxy": "^4.0.3",
    "mine.css": "^10.0.0",
    "neostandard": "^0.12.0",
    "npm-run-all2": "^8.0.1",
    "p-map": "^7.0.0",
    "type-fest": "^5.2.0",
    "typescript": "~5.9.0",
    "why-is-node-running": "^3.2.2",
    "xmlbuilder": "^15.1.1"
  },
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:domstack": "dom --src client --dest public",
    "clean": "rm -rf public && mkdir -p public",
    "migrate": "postgrator",
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0 --import otel.js",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:eslint": "eslint . --ignore-pattern 'public/*'",
    "test:node": "c8 node --test --test-reporter spec --test-force-exit --test-concurrency 1",
    "test:tsc-ci": "tsc --project tsconfig-ci.json",
    "test-skip:tsc": "tsc",
    "watch": "run-s clean && run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git ./client ./public' -l info -P -p 3000 --options --address 0.0.0.0 app.js",
    "watch:domstack": "npm run build:domstack -- --watch-only --drafts",
    "domstack-watch": "npm run build:domstack -- --watch --drafts",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js --import otel.js",
    "generate-dbml": "npx pg-to-dbml --c postgres://postgres@localhost/breadcrum"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
