{
  "extends": "@voxpelli/tsconfig/node20.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "coverage",
  ]
}
