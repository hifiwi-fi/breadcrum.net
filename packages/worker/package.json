{
  "name": "@breadcrum/worker",
  "description": "The queue worker process in breadcrum.net",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:eslint": "eslint .",
    "test:tap": "tap",
    "test:tsc": "tsc",
    "watch": "run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git web public' -l info -P -p 3001 --options --address localhost app.js",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js"
  },
  "dependencies": {
    "@breadcrum/extract-meta": "^2.0.0",
    "@breadcrum/resources": "file:../resources",
    "@bret/is-youtube-url": "^1.0.3",
    "@fastify/autoload": "^6.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/postgres": "^6.0.1",
    "@fastify/redis": "^7.0.1",
    "@fastify/sensible": "^6.0.1",
    "@mozilla/readability": "^0.6.0",
    "@nearform/sql": "^1.10.5",
    "abstract-cache-redis": "^2.0.0",
    "bullmq": "^5.34.6",
    "concat-stream": "^2.0.0",
    "dompurify": "^3.1.2",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.1",
    "fastify-healthcheck": "^5.0.0",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "gunzip-maybe": "^1.4.2",
    "hyperid": "^3.1.1",
    "jsdom": "^26.0.0",
    "pony-cause": "^2.1.11",
    "undici": "^7.0.0",
    "user-agents": "^1.1.355"
  },
  "devDependencies": {
    "@bret/type-provider-json-schema-to-ts": "^5.0.1",
    "@types/concat-stream": "^2.0.3",
    "@types/dompurify": "^3.0.5",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.0.0",
    "@types/user-agents": "^1.0.4",
    "@voxpelli/tsconfig": "^15.0.0",
    "neostandard": "^0.12.0",
    "npm-run-all2": "^8.0.1",
    "tap": "^21.0.0",
    "typescript": "~5.8.2"
  },
  "tap": {
    "serial": [
      "test",
      "routes",
      "plugins"
    ],
    "allow-incomplete-coverage": true,
    "coverage-report": [
      "text",
      "lcovonly"
    ],
    "typecheck": false
  }
}
