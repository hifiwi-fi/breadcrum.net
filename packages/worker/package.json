{
  "name": "@breadcrum/worker",
  "description": "The queue worker process in breadcrum.net",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0 --import otel.js",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:eslint": "eslint .",
    "test:node": "c8 node --test --test-reporter spec --test-force-exit --test-concurrency 1",
    "test:tsc": "tsc",
    "watch": "run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git web public' -l info -P -p 3001 --options --address localhost app.js",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js --import otel.js"
  },
  "dependencies": {
    "@breadcrum/extract-meta": "^2.0.1",
    "@breadcrum/resources": "file:../resources",
    "@bret/is-youtube-url": "^1.0.3",
    "@fastify/autoload": "^6.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/otel": "^0.16.0",
    "@fastify/postgres": "^6.0.1",
    "@fastify/redis": "^7.1.0",
    "@fastify/sensible": "^6.0.1",
    "@mozilla/readability": "^0.6.0",
    "@nearform/sql": "^1.10.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.208.0",
    "@opentelemetry/host-metrics": "^0.37.0",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/instrumentation-runtime-node": "^0.22.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "abstract-cache-redis": "^2.0.0",
    "concat-stream": "^2.0.0",
    "dompurify": "^3.3.0",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.1",
    "fastify-healthcheck": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "gunzip-maybe": "^1.4.2",
    "jsdom": "^27.0.1",
    "json-schema-to-ts": "^3.1.1",
    "type-fest": "^5.2.0",
    "undici": "^7.0.0"
  },
  "devDependencies": {
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@types/concat-stream": "^2.0.3",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.1",
    "@voxpelli/tsconfig": "^16.0.0",
    "c8": "^10.0.0",
    "eslint": "^9.39.1",
    "neostandard": "^0.12.0",
    "npm-run-all2": "^8.0.1",
    "typescript": "~5.9.0"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
