{
  "name": "@breadcrum/worker",
  "description": "The queue worker process in breadcrum.net",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0 --import otel.js",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:eslint": "eslint .",
    "test:node": "c8 node --test --test-reporter spec --test-force-exit --test-concurrency 1",
    "test:tsc": "tsc",
    "watch": "run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git web public' -l info -P -p 3001 --options --address localhost app.js",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js --import otel.js"
  },
  "dependencies": {
    "@breadcrum/extract-meta": "^2.0.1",
    "@breadcrum/resources": "workspace:*",
    "@bret/is-youtube-url": "catalog:",
    "@fastify/autoload": "catalog:",
    "@fastify/env": "catalog:",
    "@fastify/otel": "catalog:",
    "@fastify/postgres": "catalog:",
    "@fastify/redis": "catalog:",
    "@fastify/sensible": "catalog:",
    "@mozilla/readability": "^0.6.0",
    "@nearform/sql": "catalog:",
    "@opentelemetry/api": "catalog:",
    "@opentelemetry/exporter-prometheus": "catalog:",
    "@opentelemetry/host-metrics": "catalog:",
    "@opentelemetry/instrumentation-http": "catalog:",
    "@opentelemetry/instrumentation-runtime-node": "catalog:",
    "@opentelemetry/sdk-node": "catalog:",
    "abstract-cache-redis": "catalog:",
    "concat-stream": "^2.0.0",
    "dompurify": "^3.3.0",
    "fastify": "catalog:",
    "fastify-cli": "catalog:",
    "fastify-healthcheck": "catalog:",
    "fastify-plugin": "catalog:",
    "gunzip-maybe": "^1.4.2",
    "jsdom": "^27.0.1",
    "json-schema-to-ts": "^3.1.1",
    "type-fest": "^5.2.0",
    "undici": "catalog:",
    "user-agents": "^1.1.669"
  },
  "devDependencies": {
    "@types/user-agents": "^1.0.4",
    "@fastify/type-provider-json-schema-to-ts": "catalog:",
    "@types/concat-stream": "^2.0.3",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "catalog:",
    "@voxpelli/tsconfig": "catalog:",
    "c8": "catalog:",
    "eslint": "catalog:",
    "neostandard": "catalog:",
    "npm-run-all2": "catalog:",
    "typescript": "catalog:"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
